<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE accounts SYSTEM "<%= node['darwin']['install_dir'] %>/conf/auth/accounts.dtd">

<accounts realm="Test">
  <% node['darwin']['webdav_users'].each do |u| -%>
  <user>
    <uid><%= u['username'] %></uid>
    <guid><%= create_guid(u['username']) %></guid>
    <password><%= u['password'] %></password>
    <name>Test User</name>
  </user>
  <% end -%>
</accounts>
